<view class="content"><view class="user-section"><image class="bg" src="/static/user-bg.jpg"></image><text class="bg-upload-btn yticon icon-paizhao"></text><view class="portrait-box"><image class="portrait" src="{{userInfo.portrait}}" onerror="{{portraitError}}" data-event-opts="{{[['tap',[['upload',['$event']]]]]}}" bindtap="__e"></image><text class="pt-upload-btn yticon icon-paizhao"></text></view></view><view class="row b-b"><text class="tit">用户名</text><input class="input" type="text" placeholder="用户名" placeholder-class="placeholder" data-event-opts="{{[['input',[['__set_model',['$0','nickname','$event',[]],['userInfo']]]]]}}" value="{{userInfo.nickname}}" bindinput="__e"/></view><view class="row b-b"><text class="tit">手机号</text><input class="input" type="text" placeholder="手机号" placeholder-class="placeholder" data-event-opts="{{[['input',[['__set_model',['$0','mobile','$event',[]],['userInfo']]]]]}}" value="{{userInfo.mobile}}" bindinput="__e"/></view><button data-event-opts="{{[['tap',[['confirm',['$event']]]]]}}" class="add-btn" bindtap="__e">提交</button></view>